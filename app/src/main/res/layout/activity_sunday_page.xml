<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/sunTopBar"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/sundaytopbar"/>

            <Button
                android:id="@+id/btnViewMonday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/viewworkouts"/>

            <Button
                android:id="@+id/addMonday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/addworkouts"/>

            <Button
                android:id="@+id/updateMon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/editworkouts"/>

            <Button
                android:id="@+id/deleteMonday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/deleteworkouts"/>

            <Button
                android:id="@+id/sunBotBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/lowerbarjusthome"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>