<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MondayAdd"
    tools:layout_editor_absoluteY="25dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/mondayAddTopBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/mondaytopbar"/>

            <EditText
                android:id="@+id/mondayInput2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/nameedit"
                android:inputType="textPersonName"
                android:paddingLeft="160dp" />

            <EditText
                android:id="@+id/mondayInput1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:paddingLeft="155dp"
                android:ems="10"
                android:background="@drawable/setsedit"/>

            <EditText
                android:id="@+id/mondayInput3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:paddingLeft="155dp"
                android:background="@drawable/repsedit"/>

            <EditText
                android:id="@+id/mondayInput4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:paddingLeft="155dp"
                android:background="@drawable/weightedit"/>

            <EditText
                android:id="@+id/mondayInput5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:paddingLeft="155dp"
                android:background="@drawable/idedit"/>

            <Button
                android:id="@+id/mondayAdd2Data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/addbtn"/>

            <Button
                android:id="@+id/updateMonBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/editbtn"/>

            <Button
                android:id="@+id/deleteBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/deletebtn"/>

            <Button
                android:id="@+id/mondayAddBotBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/lowerbarjusthome"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>